#= require spec_helper

describe "App.<%= class_name %>Controller", ->
  beforeEach( ->
    Test.store = TestUtil.lookupStore()

    Ember.run( ->
      Test.store.loadOne(<%= model_name %>, id: 1, name: 'Alpha')

      Test.controller = <%= controller_name %>.create()
      Test.controller.set 'content', Test.store.findOne(<%= model_name %>, 1)
    )
  )

  it "displays items", ->
    assert.equal  Test.controller.content
    assert.equal  Test.controller.content.get('id'), '1'
